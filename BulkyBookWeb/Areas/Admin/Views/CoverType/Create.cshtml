@model CoverType

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary"> Create Cover Type</h2>
            <hr />
        </div>
    </div>
    @*<div asp-validation-summary="All"></div> this shows all errors*@
    <div class="mb-3">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary" style="width:150px">Create</button>
    <a asp-controller="CoverType" asp-action="Index" class="btn btn-primary" style="width:150px">
        Back to list
    </a>
</form>


@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
    
}
